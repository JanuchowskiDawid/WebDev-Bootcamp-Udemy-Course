<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= farm.name %>
    </title>
</head>

<body>
    <h1>
        <%= farm.name %>
    </h1>
    <section>
        <h2>Location: <%= farm.city %>
        </h2>
    </section>
    <section>
        <h2> E-mail: <%= farm.email %>
        </h2>
    </section>
    <section>
        <h2>Products</h2>
        <ul>
            <% for(let product of farm.products) {%>
                <li>
                    <a href="/products/<%= product._id %> ">
                        <%= product.name %>
                    </a>
                </li>
                <% } %>
        </ul>
    </section>

    <a href="/farms">Back to farms</a>
    <a href="/farms/<%= farm._id %>/products/new">New product</a>
    <form action="/farms/<%= farm._id %>?_method=DELETE" method="post"><button>Delete</button></form>

</body>

</html>